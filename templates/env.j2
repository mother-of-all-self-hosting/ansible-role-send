# ==================================================
# General config
# ==================================================

APP_NAME={{ joplin_server_environment_variable_app_name }}
APP_PORT={{ joplin_server_environment_variable_http_port }}
ERROR_STACK_TRACES={{ joplin_server_environment_variable_error_stack_traces_enabled | to_json }}

# ==================================================
# URL config
# ==================================================

APP_BASE_URL={{ joplin_server_environment_variable_base_url }}

# ==================================================
# Database config
# ==================================================

DB_CLIENT=pg
POSTGRES_HOST={{ joplin_server_environment_variable_database_host }}
POSTGRES_PORT={{ joplin_server_environment_variable_database_port }}
POSTGRES_USER={{ joplin_server_environment_variable_database_user }}
POSTGRES_PASSWORD={{ joplin_server_environment_variable_database_password }}
POSTGRES_DATABASE={{ joplin_server_environment_variable_database_name }}

# ==================================================
# Mailer config
# ==================================================

MAILER_ENABLED={{ joplin_server_environment_variable_mailer_enabled | to_json }}
MAILER_HOST={{ joplin_server_environment_variable_mailer_host }}
MAILER_PORT={{ joplin_server_environment_variable_mailer_port }}
MAILER_AUTH_USER={{ joplin_server_environment_variable_mailer_user }}
MAILER_AUTH_PASSWORD={{ joplin_server_environment_variable_mailer_password }}
MAILER_NOREPLY_NAME={{ joplin_server_environment_variable_mailer_noreply_name }}
MAILER_NOREPLY_EMAIL={{ joplin_server_environment_variable_mailer_noreply_email }}
MAILER_SECURITY={{ joplin_server_environment_variable_mailer_security }}

